@model PhoMO.ViewModels.AddDateViewModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add a Date</h2>

<form asp-action="Add" asp-controller="Date" method="post">
    <div class="form-group">
        <label asp-for="DateTime"></label>
        <input class="form-control" asp-for="DateTime" />
        <span asp-validation-for="DateTime"></span>
    </div>
    <input type="submit" value="Add Date" />
</form>