@model PhoMO.ViewModels.AddPhotoViewModel
    

<h1>Add Photo</h1>

<form asp-controller="Photo" asp-action="Add" method="post">   
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="FocalLength"></label>
        <input class="form-control" asp-for="FocalLength" />
        <span asp-validation-for="FocalLength"></span>
    </div>
    <div class="form-group">
        <label asp-for="Datetime"></label>
        <select asp-for="Datetime" asp-items="Model.Dates"></select>
    </div>
    <div class="form-group">
        <label asp-for="Iso"></label>
        <input class="form-control" asp-for="Iso" type="number" />
        <span asp-validation-for="Iso"></span>
    </div>  

        <div class="form-group">
        <label asp-for="Shutterspeed"></label>
        <input class="form-control" asp-for="Shutterspeed" type="number" />
        <span asp-validation-for="Shutterspeed"></span>
    </div>
    
    <input type="submit" value="Add Photo" /></form>